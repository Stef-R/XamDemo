<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Calc"
             x:Class="Calc.MainPage">
  <StackLayout x:Name="outerlayout" Orientation="Vertical" BackgroundColor="Yellow" >
    <Frame>
      <Label x:Name="textLabel" Text="Welcome to Calulator!"
           VerticalOptions="Center"
           HorizontalOptions="Center" BackgroundColor="Gray" />
    </Frame>
    <StackLayout x:Name="tasturLinie1" Orientation="Horizontal">
      <Button x:name="digi1" Text="1"  Clicked="OnDigitClick"  />
      <Button Text="2" Clicked="OnDigitClick" />
      <Button Text="3" Clicked="OnDigitClick" />
    </StackLayout>
    <StackLayout x:name="tasturLinie2" Orientation="Horizontal">
      <Button Text="4" Clicked="OnDigitClick" />
      <Button Text="5" Clicked="OnDigitClick" />
      <Button Text="6" Clicked="OnDigitClick" />
    </StackLayout>
    <StackLayout x:name="tasturLinie3" Orientation="Horizontal">
      <Button Text="7" Clicked="OnDigitClick" />
      <Button Text="8" Clicked="OnDigitClick" />
      <Button Text="9" Clicked="OnDigitClick" />
    </StackLayout>
  </StackLayout>

</ContentPage>